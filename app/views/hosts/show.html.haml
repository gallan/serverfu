- content_for :sidebar do
  .list-group
    - @hosts.each do |host|
      = link_to host_url(host), class: "list-group-item" + ((@host.id == host.id) ? " active" : "") do
        = host.name

%ul.nav.nav-tabs#tabs
  %li.active
    %a(href="#servers" data-toggle="tab")
      Servers 
      %span.label.label-info= @host.servers.length
  %li
    %a(href="#contacts" data-toggle="tab")
      Contacts
      %span.label.label-info= @host.contacts.length
  %li
    %a(href="#notes" data-toggle="tab")
      Notes
      %span.label.label-info= @host.notes.length

.tab-content
  .tab-pane.active#servers
    - if @host.servers.length > 0 then
      .spacer-v10
      %table.table.table-hover
        %thead
          %tr
            %th(width="60%") Name
            %th(width="20%") Clients
            %th(width="20%") Sites
        %tbody
          - @host.servers.each do |server|
            %tr
              %td
                = link_to server_url(server) do
                  = server.name
              %td 22
              %td 33
    - else
      No servers.
  .tab-pane#contacts
    - if @host.contacts.length > 0 then
      .spacer-v10
      %table.table.table-hover
        %thead
          %tr
            %th(width="20%") Last Name
            %th(width="20%") First Name
            %th(width="60%") Description
        %tbody
          - @host.contacts.each do |contact|
            %tr
              %td
                = link_to contact_url(contact) do
                  = contact.last_name
              %td
                = link_to contact_url(contact) do
                  = contact.first_name
              %td
                = link_to contact_url(contact) do
                  = contact.description
    - else
      No contacts.
  .tab-pane#notes
    - if @host.notes.length > 0 then
      .spacer-v10
      %table.table.table-hover
        %thead
          %tr
            %th(width="30%") Created On
            %th Note
        %tbody
          - @host.notes.each do |note|
            %tr
              %td
                = link_to note_url(note) do
                  = note.created_at
              %td
                = link_to note_url(note) do
                  = note.note
    - else
      No notes.